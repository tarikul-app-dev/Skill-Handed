                    <Spinner
                        android:id="@+id/sp_skill"
                        style="@style/style_Spinner"
                        android:layout_width="match_parent"
                        android:entries="@array/spinner_skill"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="03dp"
                        android:layout_marginRight="10dp" />
                    <!--</android.support.v7.widget.CardView>-->
                    <EditText
                        android:id="@+id/edtOthers"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#147F75"
                        android:hint="@string/enter_here"
                        android:textColor="#fff"
                        android:textColorHint="#fff"
                        android:textSize="16sp"
                        android:visibility="gone"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">


                    <RadioGroup
                        android:id="@+id/rg_oversease"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_ovs_exp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:text="@string/ovs_exp"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rbtn_ovs_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="@string/yes"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <RadioButton
                            android:id="@+id/rbtn_ovs_no"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:checked="true"
                            android:text="@string/no"
                            android:textColor="#fff"
                            android:textSize="16sp" />


                    </RadioGroup>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_oversease_yes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_overs_trade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trade:"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edt_trade"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:backgroundTint="#fff"
                            android:textColor="#fff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_overs_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duration:"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edt_duration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="05dp"
                            android:backgroundTint="#fff"
                            android:textColor="#fff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_overs_country"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Country:"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edt_country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:backgroundTint="#fff"
                            android:textColor="#fff" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txv_overs_company"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Company:"
                            android:textColor="#fff"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/edt_company"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:backgroundTint="#fff"
                            android:textColor="#fff" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_submit"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/round_shape"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:textSize="30sp"
                        android:layout_gravity="center"
                        android:textColor="@color/color_white"
                        />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>



    </LinearLayout>





</LinearLayout>